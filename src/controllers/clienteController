const clienteModel = require("../models/clienteModel");

function contarClientes(req, res) {
    clienteModel.contarClientes()
        .then((resultado) => {
            res.status(200).json(resultado);
        })
        .catch((erro) => {
            console.log(erro);
            console.log("Houve um erro ao contar os clientes: ", erro.sqlMessage);
            res.status(500).json(erro.sqlMessage);
        });
}

module.exports = {
    contarClientes
};
